  <div class="main">

    <div class="box">

      <div class="part">
        <h1>Pinterest</h1>
        <p>Pinterest helps you to upload your projects <br> with the people in your life.</p>
      </div>

      <div class="part1">
        <form action="/login" method="post">
          <input type="text" name="username" placeholder="Username">
          <br>
          <input type="password" name="password" placeholder="Password">
          <br>
          <input id="sub" type="submit" value="Log In">
          <br>
          <a id="forgot" href="/reset">Forgotten password</a>
          <hr style="margin-top: 20px;" color="grey" size="0.5px">
          <a href="/reg"><input id="reg" type="but" value="Create New Account"></a>
        </form>  
      </div>
    </div>
  </div>
