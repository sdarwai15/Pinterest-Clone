<%- include("partials/headers") %>

    <style>
        #content {
            position: relative;
            margin-top: 60px;
            min-height: inherit;
            width: 100%;
            padding: 1vh;
            overflow: hidden;
        }

        #upbox {
            padding: 2vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            height: 50vh;
            width: 100%;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        }

        #upbox>#accdp {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 140px;
            width: 140px;
            border-radius: 50%;
            background-color: rgb(235, 235, 235);
        }

        #upbox>#accdp>h1 {
            font-size: 50px;
            font-weight: bold;
        }

        .btns {
            text-decoration: none;
            margin-left: 5px;
            padding: 8px 22px;
            border-radius: 50px;
            background-color: rgb(235, 235, 235);
            color: black;
            font-weight: 500;
        }

        #btns {
            margin-top: 30px;
            width: 16%;
            display: flex;
            justify-content: space-between;
        }

        #upbox>h2 {
            font-size: 35px;
            font-weight: bold;
            margin-top: 20px;
        }

        #upbox>h5 {
            font-size: 18px;
            font-weight: bold;
            margin-top: 10px;
        }

        #downbox {
            padding: 2vh;
            position: relative;
            height: 50vh;
            width: 100%;
        }

        #createpin {
            overflow: hidden;
            position: absolute;
            right: 2%;
            top: 5%;
            font-size: 30px;
            height: 50px;
            width: 50px;
            border-radius: 50%;
            background-color: rgb(235, 235, 235);
        }

        #createpin>a {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100%;
            width: 100%;
            text-decoration: none;
            color: black;
        }

        #downbox>a {
            display: inline-block;
            margin-top: px;
            text-decoration: none;
            padding: 80px 100px;
            color: black;
            font-size: 30px;
            background-color: rgb(235, 235, 235);
            transition: 0.3s all;
        }

        #downbox>a:hover {
            background-color: black;
            color: white;
        }

        #link>a:hover {
            background-color: black;
            color: white;
        }

        .hh:hover {
            background-color: black;
            color: white;
        }

        #createpin:hover a {
            background-color: black;
            color: white;
        }

        #upbox>a {
            color: black;
            text-decoration: none;
            font-size: 17px;
            font-weight: bold;
            margin-bottom: -10px;
            margin-top: 10px;
        }

        #full {
            display: none;
            position: absolute;
            top: 0;
            height: 100%;
            width: 100%;
            background-color: rgba(0, 0, 0, 0.671);
            backdrop-filter: blur(5px);
        }

        #followingmodal {
            position: absolute;
            top: 40%;
            left: 50%;
            transform: translate(-50%, -50%);
            min-height: 20px;
            width: 520px;
            border-radius: 40px;
            overflow: hidden;
            padding: 20px;
            background-color: rgb(255, 255, 255);
        }

        .top {
            display: flex;
        }

        .top>h4 {
            margin-left: 155px;
            font-weight: bold;
        }

        .top>i {
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 20px;
            cursor: pointer;
            height: 35px;
            width: 35px;
            margin-left: 170px;
            border-radius: 50%;
            background-color: rgb(230, 230, 230);
            color: rgb(0, 0, 0);
        }

        .user {
            margin-top: 5px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 15px;
            width: 100%;
        }

        .lft{
            display: flex;
            align-items: center;
        }

        .lft>h5{
            margin-left: 10px;
        }

        .lft>.dp {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 55px;
            width: 55px;
            border-radius: 50%;
            background-color: rgba(128, 128, 128, 0.281);
            overflow: hidden;
        }

        /* .lft>.dp>img {
            height: 100%;
            width: 100%;
            object-fit: cover;
        } */

        .user>a{
            padding: 10px;
            background-color: rgb(224, 224, 224);
            text-decoration: none;
            color: black;
            font-weight: bold;
            border-radius: 20px;
        }
    </style>
    <div id="content">
        <div id="upbox">
            <div id="accdp">
                <h1>
                    <%=loguser.name.charAt(0).toUpperCase()%>
                </h1>
            </div>
            <h2>
                <%=loguser.name.charAt(0).toUpperCase()+loguser.name.substring(1)%>
            </h2>
            <h5>
                <%=loguser.email%>
            </h5>
            <a id="follower" href="#">
                <%= loguser.followers.length%> Follower
            </a>
            <div id="btns">
                <a href="#" class="btns hh">Share</a>
                <a href="#" class="btns hh">Edit Profile</a>
            </div>
        </div>

        <div id="downbox">

            <div id="createpin">
                <a href="/createpin/<%=loguser._id%>"><i class="ri-add-line"></i></a>
            </div>

            <a href="/user/saves/<%=loguser._id%>">My saves</a>

        </div>

        <div id="full">
            <div id="followingmodal">
                <div class="top">
                    <h4>Following</h4>
                    <i class="ri-close-fill cross"></i>
                </div>
                <div class="down">
                    <% if(loguser.followers.length > 0){%>
                        <% loguser.followers.forEach(function(info){%>
                            <div class="user">
                                <div class="lft">
                                    <div class="dp">
                                        <h2><%=info.name.charAt(0).toUpperCase()%></h2>
                                    </div>
                                    <h5><%=info.name.charAt(0).toUpperCase()+info.name.substring(1)%></h5>
                                </div>
                                <a href="">Unfollow</a>
                            </div>
        
                        <%})%>
                    <%} else{%>
                        <h5>No followers</h5>
                    <%}%>
                </div>
            </div>
        </div>
    </div>

    <script>
        var follow = document.querySelector('#follower');
        var overfollow = document.querySelector('#full');
        var cross = document.querySelector('.cross');

        follow.addEventListener('click', function(val){
            overfollow.style.display = 'initial';
        });

        cross.addEventListener('click', function(){
            overfollow.style.display = 'none';
        })
    </script>

    <%- include("partials/footer") %>