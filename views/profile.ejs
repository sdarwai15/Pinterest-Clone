<%- include("partials/headers") %>
    <style>
        #content {
            display: flex;
            flex-wrap: wrap;
            margin-top: 80px;
            min-height: inherit;
            width: 100%;
            padding: 1vh;
            background-color: rgb(255, 255, 255);
        }

        #content>a{
            display: inline-block;
            text-decoration: none;
            color: black;
        }

        .card {
            margin-top: -17px;
            position: relative;
            overflow: hidden;
            margin-bottom: 20px;
            margin-left: 15px;
            height: 430px;
            width: 15.5%;
            border-radius: 22px;
            background-color: transparent;
            outline: none;
            border: none;
            text-decoration: none;
        }

        .card:nth-child(1) {
            margin-left: 10px;
        }

        .img {
            overflow: hidden;
            border-radius: 22px;
            height: 370px;
            width: 100%;
        }

        .img>img {
            height: 100%;
            width: 100%;
            object-fit: cover;
        }

        .title {
            padding: 10px;
        }

        .title>h6 {
            font-weight: bold;
            color: black;
        }

        .card>.overlay {
            display: none;
            position: absolute;
            top: 0;
            height: 370px;
            width: 100%;
            padding: 15px;
            border-radius: 22px;
            background-color: rgba(0, 0, 0, 0.247);
            z-index: 99999;
            pointer-events: none;
        }

        .up {
            display: flex;
            justify-content: space-between;
            align-items: center;
            pointer-events: initial;
        }

        .up>a {
            text-decoration: none;
            color: white;
            font-weight: bolder;
            font-size: 20px;
        }

        .save {
            padding: 8px 15px;
            border-radius: 50px;
            background-color: red;
        }

        .down {
            width: 85%;
            display: flex;
            justify-content: space-between;
            position: absolute;
            bottom: 5%;
            cursor: pointer;
            pointer-events: initial;
        }

        .down a {
            padding: 5px 10px;
            color: black;
            text-decoration: none;
            background-color: white;
            border-radius: 50px;
        }

        .card:hover .overlay {
            display: initial;
        }

        .createpin {
            overflow: hidden;
            position: absolute;
            right: 2%;
            bottom: 15%;
            font-size: 30px;
            height: 50px;
            width: 50px;
            border-radius: 50%;
            background-color: rgb(235, 235, 235);
        }

        .createpin>a {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100%;
            width: 100%;
            text-decoration: none;
            color: black;
        }
    </style>

    <div id="content">


        <%allpins.forEach(function(val){%>
            <a href="/pindiv/<%=val._id%>">
                <div class="card">
                    <div class="img">
                        <img src="../upload/<%=val.pinimage%>">
                    </div>
                    <div class="title">
                        <h6>
                            <%=val.mainhead%> 
                        </h6>
                    </div>
                    <div class="overlay">

                        <div class="up">
                            <a href="">My save</a>
                            <a class="save" href="/post/save/<%=val._id%>">
                                <% if (founduser.saves.find(i => val._id.toString() === i.toString()) ) { %>
                                    Unsave
                                <%} else { %>
                                    Save
                                <%}%>    
                            </a>
                        </div>

                        <div class="down">
                            <div class="frst">
                                <a href="">link </a>
                            </div>
                            <div class="scd">
                                <a id="a" href=""><i class="ri-share-box-fill"></i></a>
                                <a href=""><i class="ri-more-fill"></i></a>
                            </div>
                        </div>

                    </div>
                </div>
            </a>
            <%})%>

                <div class="createpin">
                    <a href="/createpin/<%=founduser._id%>"><i class="ri-add-line"></i></a>
                </div>


    </div>

